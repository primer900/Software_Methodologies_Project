{% set nav = 'sell' %}
{% extends 'main.twig' %}

{% block content %}

    
      <div id="wrapper">
        
        <p id="pagedis">Fill out the form and we will buy yourold mac!</p>
      
      <section id="Selection">
       
        <form action="" method="post" enctype="multipart/form-data">
          
          <h1>Sell a Macbook Form</h1>
          
          <fieldset>
            <legend><span class="number">1</span> Personal info </legend>
          
          <label for="name">Name: </label>
          <input type="text" id="name" name="user_name">
          
          <label for="mail">Email: </label>
          <input type="email" id="mail" name="user_email">
            
          <label for="address" style="display: none;">ATTENTION! LEAVE THIS FIELD BLANK </label>
          <input type="address" style="display: none;" id="address" name="address">
          
          </fieldset>
           
          {% set mac_book = [ '13" White MacBook 2006-2010', '13" White MacBook Unibody 2009-2010', '13" Black MacBook 2006-2008', '13" Aluminium MacBook Unibody 2008-2009' ] %}
          
                    <fieldset>
            <legend><span class="number">2</span> Macbook ID (select at least 1 option)</legend>
                      
          <label for="serial">Please provide the Serial No. from the back of your macbook: </label>
          <input type="text" id="serial" name="serial">
            
          <label for="type">or Select the Macbook type: </label>
          <select id="type" name="Macbook_type">
            <option value="">Select product</option>
            <optgroup label="Macbook">
              
          {% for key, user in mac_book %}
           <option value="{{user}}">{{ user }}</option>
          {% endfor %}
              
           </optgroup>
            <optgroup label="Macbook Pro">
              <option value="Macbook_Pro_13">Macbook Pro 13" [base buyback - $<?php echo $macbookpro13in?>]</option>
              <option value="Macbook_Pro_15">Macbook Pro 15"</option>
            </optgroup>
          </select>
            </fieldset>
          
      <fieldset><legend><span class="number">3</span>Condition info</legend></fieldset>     
            
          <label>Condition: </label>
          <input type="radio" value="new" id="new" name="condition"><label for="new" class="light">New</label>
            <input type="radio" value="used" id="used" name="condition"><label for="used" class="light">Used</label>
            
          <label>Damages:</label>
          <input type="checkbox" value="cracked_screen" id="cracked_screen" name="damages[]"><label for="cracked_screen" class="chbx">Cracked screen</label>
          <input type="checkbox" value="dents" id="dents" name="damages[]"><label for="dents" class="chbx">Dents</label>
            <input type="checkbox" value="scratches" id="scratches" name="damages[]"><label for="scratches" class="chbx">Scratches</label>
            <input type="checkbox" value="trackpad" id="trackpad" name="damages[]"><label for="trackpad" class="chbx">trackpad</label>
            <input type="checkbox" value="speakers" id="spk" name="damages[]"><label for="spk" class="chbx">speakers</label>
            <input type="checkbox" value="no charger" id="ncharger" name="damages[]"><label for="ncharger" class="chbx">no charger</label>
            <input type="checkbox" value="battery" id="battery" name="damages[]"><label for="battery" class="chbx">battery</label><br>
          

<!--       <form action="{{ siteUrl('/sell') }}" method="post">-->
        <input type="file" name="photo" value="img" id="image" />
<!--        <input type="submit" value="Upload image" />-->
<!--      </form>-->

           <fieldset>
            
          <label for="bio">Please provide any additional information: </label>
          <textarea  id="bio" name="user_bio"></textarea>
          
          </fieldset>
            
          <a href="#top" id="totop">Back to Top</a>
          <button type="reset" id="reset">Clear Form</button>
          <button type="submit">Send Form!</button>
          
        </form>
        
      </section>
      
        </div>
{% endblock content %}
